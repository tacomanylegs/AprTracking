{
  "manifest_version": 3,
  "name": "DeFi APR Tracker",
  "version": "1.0",
  "description": "Track APRs from MMT, TakaraLend, and Volos UI",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://app.mmt.finance/*",
    "https://app.takaralend.com/*",
    "https://www.volosui.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Check APRs"
  }
}